'dbscan_train_data2',    -- source table
'dbscan_result',        -- output table
'pid',                  -- point id column
'points',             -- data point
 1.75,                  -- epsilon
 4,                     -- min samples
'dist_norm2',           -- metric
'brute_force');               -- algorithm

